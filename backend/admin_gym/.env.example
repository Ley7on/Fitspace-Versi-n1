# Configuración de producción para el Sistema de Gestión de Gimnasio

# Django
DJANGO_SECRET_KEY=tu-clave-secreta-super-segura-aqui
DEBUG=False
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com

# Base de datos
DATABASE_URL=mysql://usuario:password@localhost/gym_db
# O para PostgreSQL: postgresql://usuario:password@localhost/gym_db

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-de-app
DEFAULT_FROM_EMAIL=tu-email@gmail.com

# Redis (para cache y celery)
REDIS_URL=redis://localhost:6379/0

# Configuración de archivos estáticos
STATIC_ROOT=/var/www/gym/static/
MEDIA_ROOT=/var/www/gym/media/

# Configuración de seguridad
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Configuración del gimnasio
GYM_NAME=Mi Gimnasio
GYM_ADDRESS=Dirección del Gimnasio
GYM_PHONE=+56912345678
GYM_EMAIL=contacto@migimnasio.com

# Configuración de backup
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mi-gym-backups

# Configuración de monitoreo
SENTRY_DSN=https://tu-sentry-dsn-aqui
LOG_LEVEL=INFO